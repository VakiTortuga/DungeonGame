<Window x:Class="Dungeon.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dungeon Game"
        Width="900"
        Height="650"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- ===================== -->
        <!-- MAIN MENU -->
        <!-- ===================== -->
        <Grid>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="300">

                <TextBlock Text="Dungeon Game"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Content="Start New Game"
                        Margin="0,5"/>

                <Button Content="Continue Game"
                        Margin="0,5"/>

                <Button Content="Open Editor"
                        Margin="0,5"/>

                <Button Content="Exit"
                        Margin="0,20"/>
            </StackPanel>
        </Grid>

        <!-- ===================== -->
        <!-- GAME WINDOW -->
        <!-- ===================== -->
        <Grid Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <!-- EMPTY GRID 20x20 -->
            <ItemsControl Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="20" Columns="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="30"
                                Height="30"
                                BorderBrush="Gray"
                                BorderThickness="0.5"
                                Background="#F5F5F5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- 400 пустых ячеек -->
                <ItemsControl.Items>
                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">0</sys:Int32>
                </ItemsControl.Items>
            </ItemsControl>

            <!-- HUD -->
            <StackPanel Grid.Column="1"
                        Margin="10"
                        VerticalAlignment="Top">

                <TextBlock Text="Statistics"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Health: 100" Margin="0,5"/>
                <TextBlock Text="Crystals: 0 / 5" Margin="0,5"/>

                <Button Content="Attack" Margin="0,10"/>
                <Button Content="Pause" Margin="0,5"/>
                <Button Content="Save and Exit" Margin="0,20"/>
            </StackPanel>
        </Grid>

        <!-- ===================== -->
        <!-- EDITOR WINDOW -->
        <!-- ===================== -->
        <Grid Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <!-- EMPTY GRID 20x20 -->
            <ItemsControl Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="20" Columns="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="30"
                                Height="30"
                                BorderBrush="Gray"
                                BorderThickness="0.5"
                                Background="#F5F5F5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.Items>
                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">0</sys:Int32>
                </ItemsControl.Items>
            </ItemsControl>

            <StackPanel Grid.Column="1"
                        Margin="10">

                <TextBlock Text="Editor"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Button Content="Create New Level" Margin="0,5"/>
                <Button Content="Load Level" Margin="0,5"/>
                <Button Content="Save Level" Margin="0,20"/>
                <Button Content="Exit Editor"/>
            </StackPanel>
        </Grid>

        <!-- ===================== -->
        <!-- EXIT -->
        <!-- ===================== -->
        <Grid Visibility="Collapsed">
            <TextBlock Text="Exit"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>